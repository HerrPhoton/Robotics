<?xml version="1.0"?>
<robot name="sam_bot" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Robot Base -->
  <link name="base_link">

    <visual>
      <geometry>
        <box size="0.84 0.62 0.36"/>
      </geometry> 

      <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="0.84 0.62 0.36"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 1.57"/>
      <mass value="15"/>
      <inertia ixx="1.044" ixy="0.0" ixz="0.0" iyy="1.3625" iyz="0.0" izz="0.6425"/>
    </inertial>

  </link>

    <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 -0.3" rpy="0 0 0"/>
  </joint>

    <!-- Wheels -->
  <link name="drivewhl_l_link">

    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.20" length="0.08"/>
      </geometry>

      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.20" length="0.08"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00527" ixy = "0" ixz = "0" iyy="0.00527" iyz = "0" izz="0.01"/>
    </inertial>

  </link>

  <joint name="drivewhl_l_joint" type="continuous">
    <parent link="base_link"/>
    <child link="drivewhl_l_link"/>
    <origin xyz="-0.24 0.335 -0.10" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="drivewhl_r_link">

    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.20" length="0.08"/>
      </geometry>

      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="0.20" length="0.08"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00527" ixy = "0" ixz = "0" iyy="0.00527" iyz = "0" izz="0.01"/>
    </inertial>

  </link>

  <joint name="drivewhl_r_joint" type="continuous">
    <parent link="base_link"/>
    <child link="drivewhl_r_link"/>
    <origin xyz="-0.24 -0.335 -0.10" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

    <!-- Caster Wheel -->
  <link name="front_caster">

    <visual>
      <geometry>
        <sphere radius="0.12"/>
      </geometry>

      <material name="white">
        <color rgba="1 1 1 1" />
      </material>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.12"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.008"/>
    </inertial>

  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.28 0.0 -0.18" rpy="0 0 0"/>
  </joint>

</robot>